FRONTEND_URL=http://localhost:5173
VITE_API_BASE=http://localhost:5001
FLASK_HOST=0.0.0.0
PORT=5001

# Base de données
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ajtpro

# Flask
FLASK_ENV=development
FLASK_DEBUG=1

# PostgreSQL
POSTGRES_DB=ajtpro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# JWT
JWT_SECRET=change-me

# Odoo password encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ODOO_ENCRYPTION_KEY=change-me

# LLM Matching (Anthropic)
ANTHROPIC_API_KEY=sk-ant-xxxxx
LLM_MODEL=claude-haiku-4-5-20251001
LLM_BATCH_SIZE=25
MATCH_THRESHOLD_AUTO=90
MATCH_THRESHOLD_REVIEW=50

# Nightly pipeline — n8n webhook (reçoit le résumé et envoie l'email)
NIGHTLY_WEBHOOK_URL=https://your-n8n-instance/webhook/nightly-report

# Nightly pipeline — scheduler
ENABLE_NIGHTLY_SCHEDULER=false
# FRONTEND_URL déjà définie plus haut, utilisée aussi par le pipeline nightly